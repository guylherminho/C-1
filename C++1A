#include <stdio.h>
#include <stdlib.h>
// setlocale (LC_ALL, "PORTUGUESE"); setar para portugues
int main () 
{
int teste1, teste2;
    
	float result;
	printf("\n\n ENTRE COM DOIS VALORES \n\n");
	printf("Favor informar o primeiro valor: ");
	scanf("%d",&teste1);
	printf("Favor informar o segundo valor: ");
	scanf("%d", &teste2);
	result= teste1/teste2;
	printf ("o resultado é %0.2f", result);
	system("pause");

}
	
