#include <stdio.h>
#include <stdlib.h>
#include <conio.h>

int main ()
{
	int a,b;
	printf("Entre com dois numeros: \n");
	scanf("%d %d", &a,&b);
	if (a==b)
{
	printf("Os numeros sao iguais ");
}
	else
	{
		printf("Os numeros são diferentes ");
	}
	getch();
}
